<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cto10k_Context">

    <TextView
        android:id="@+id/cto10k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Here's How Couch to 10k Works:"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cto10k_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cto10k"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Couch to 10k creates a personalized running program for you. Using the data received from the sensors, we will actively update your program to make sure you are on track towards your goal."
        android:textColor="@color/black"
        android:textSize="25dp"
        android:paddingTop="30dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_cto10k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cto10k_context"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Next" />

</RelativeLayout>